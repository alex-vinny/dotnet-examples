@model first.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" name="viewport" content="width=device-width" />
    <title>RSVP Form</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
  </head>
  <body>
    <div class="panel panel-sucess">
      <div class="panel-heading text-center">
        <h4>This is the RSVP Form View.</h4>
      </div>
      <div class="panel-body">
        <form class="p-a-1" asp-action="RsvpForm" method="post">
          <div asp-validation-summary="All" ></div>
          <div class="form-group">
            <p>
              <label asp-for="Name">Your Name:</label></label>
              <input class="form-control" type="text" asp-for="Name" />
            </p>
          </div>
          <div class="form-group">
            <p>
              <label asp-for="Email">Your Email:</label>
              <input class="form-control" type="email" asp-for="Email" />
            </p>
          </div>
          <div class="form-group">
            <p>
              <label asp-for="Phone">Your Phone:</label>
              <input class="form-control" type="tel" asp-for="Phone" />
            </p>
          </div>
          <div class="form-group">
            <p>
              <label>Will you attend?</label>
              <select class="form-control" asp-for="WillAttend">
                <option value="">Choose an option</option>
                <option value="true">Yes, I'll be there</option>
                <option value="false">No, I can't come</option>
              </select>
            </p>
          </div>
          <div class="text-center">
            <button class="btn btn-primary" type="submit">Submit RVPS</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
